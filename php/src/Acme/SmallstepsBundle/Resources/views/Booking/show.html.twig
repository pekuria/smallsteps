    {% extends 'AcmeSmallstepsBundle::adminBase.html.twig' %}

{% block heading %}
    Booking
{% endblock heading %}

{% block body -%}
    <h1>Booking</h1>

   <div class='table-responsive'>
        <table class="table table-bordered table-responsive table-striped">
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Bookingdate</th>
                <td>{{ entity.bookingDate|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ entity.status }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('Admin_Booking') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('Admin_Booking_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
