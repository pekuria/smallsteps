{% extends 'AcmeSmallstepsBundle::adminBase.html.twig' %}

{% block heading %}
    Price list
{% endblock heading %}

{% block content -%}


    <div class="table-responsive">
        <table class="table table-bordered table-responsive table-striped">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Details</th>
                    <th>Cost</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for entity in entities %}
                    <tr>
                        <td><a href="{{ path('Admin_Price_show', { 'id': entity.id }) }}">{{ entity.name }}</a></td>
                        <td>{{ entity.details }}</td>
                        <td>{{ entity.cost }}</td>
                        <td>
                            <ul>
                                <li>
                                    <a href="{{ path('Admin_Price_show',
                     { 'id': entity.id }) }}" >show</a>
                                </li>
                                <li>
                                    <a href="{{ path('Admin_Price_edit',
                     { 'id': entity.id }) }}" >edit</a>
                                </li>
                            </ul>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>

    <ul>
        <li>
            <a href="{{ path('Admin_Price_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
{% endblock %}
