<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
        <meta name="description" content="">
        <meta name="viewport" content="width=device-width">
        {% block head %}
            <title>{% block title %}Welcome to Smallsteps!{% endblock %}</title>
            {% block stylesheets %}
                {% stylesheets  'bundles/acmesmallsteps/css/bootstrap.min.css'
                                'bundles/acmesmallsteps/css/custom.css'
                               'bundles/acmesmallsteps/css/smoke.css'   filter='cssrewrite' %}
                <link rel="stylesheet" href="{{ asset_url }}">
                {% endstylesheets %}
            {% endblock %}
        {% endblock %}
    </head>
    <body>
        {% block body %}
            <div id="wrap">                
                <div class="container">
                    <header>
                        <nav class="navbar navbar-default container navbar-fixed-top" role="navigation">
                            <div class="container-fluid">                                
                                {% block content_header %}
                                    <div class="navbar-header"> 
                                        <p id='title' class="navbar-left"><a class="navbar-brand"
                                                                             href="http://smallstepsdaynursery.net/">Smallsteps Nursery And Daycare</a></p>                       
                                    </div>
                                {% endblock %}

                            </div>
                        </nav>
                    </header>

                    <article>
                        {% for flashMessage in app.session.flashbag.get('notice') %}
                            <div class="flash-message">
                                <em>Notice</em>: {{ flashMessage }}
                            </div>
                        {% endfor %}
                        <div id="feedback" class="error">
                            {% block errors %}
                            {% endblock errors %}
                        </div>
                        <div class="panel panel-default">
                            <div class="panel-heading">
                                <h3 class="panel-title">{% block heading %}{% endblock %}</h3>
                            </div>
                            <div class="panel-body">
                                {% block content %}



                                {% endblock %}
                            </div>
                        </div>
                    </article>

                </div><!--container-->
            </div><!--wrap-->

            <div id="footer">
                {% block footer %}
                    <footer class="container">                
                        <p>&copy; {{ "now"|date("Y") }} - <a href="http://smallstepsdaynursery.net" title="">Smallsteps Nursery And Daycare</a></p>
                    </footer>
                {% endblock %} 
            </div>
        </div>
        {% block javascripts %}
            {% javascripts
                        'bundles/acmesmallsteps/js/vendors/modernizr-2.6.2-respond-1.1.0.min.js'
                        'bundles/acmesmallsteps/js/vendors/respond.min.js'
                        'bundles/acmesmallsteps/js/vendors/jquery-2.1.0.min.js'
                        'bundles/acmesmallsteps/js/vendors/bootstrap.min.js'
                        'bundles/acmesmallsteps/js/vendors/garlic.min.js'
                        'bundles/acmesmallsteps/js/calender.js'
                        'bundles/acmesmallsteps/js/booking.js'
                        'bundles/acmesmallsteps/js/main.js'
                        'bundles/acmesmallsteps/js/total.js'
            %} 
            <script src="{{ asset_url }}"></script>
            {% endjavascripts %}
        {% endblock %}
    {% endblock %}
</body>
</html>


